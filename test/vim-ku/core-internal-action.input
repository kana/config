  " kind_a cus  1   3   5   7   9   b   d   f
  " kind_a def    2 3     6 7     a b     e f
  " kind_b cus        4 5 6 7         c d e f
  " kind_b def                8 9 a b c d e f

  let kind_a = {
  \   'default_action_table': {
  \     '2': function('add'),
  \     '3': function('add'),
  \     '6': function('add'),
  \     '7': function('add'),
  \     'a': function('add'),
  \     'b': function('add'),
  \     'e': function('add'),
  \     'f': function('add'),
  \   },
  \   'default_key_table': {},
  \   'name': 'A',
  \ }
  let kind_b = {
