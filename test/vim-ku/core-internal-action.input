  \     '9': function('bufnr'),
  \     'a': function('bufnr'),
  \     'b': function('bufnr'),
  \     'c': function('bufnr'),
  \     'd': function('bufnr'),
  \     'e': function('bufnr'),
  \     'f': function('bufnr'),
  \   },
  \   'default_key_table': {},
  \   'name': 'B',
