(test-section "xire-translate")  ;{{{1

(define (test-xire-translate s)
  (with-string-io
    s
    (lambda ()
      (xire-translate)
      (get-output-string (current-output-port)))))


(test* "good"
       "echo 142857\n"
       (test-xire-translate "(echo 142857)"))

(test* "bad - invalid xire expression"
       (test-error <error>)
       (test-xire-translate ":echo"))

(test* "bad - read error"
       (test-error <error>)
       (test-xire-translate "(echo 142857"))




(test-end)  ;{{{1

